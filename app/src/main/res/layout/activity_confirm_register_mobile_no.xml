<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfirmRegisterMobileNoActivity"
    android:gravity="center">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/busicon"/>

    <EditText
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:id="@+id/etConfirmRegisterMobileNo"
        android:hint="Enter Register Mobile No :-"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:inputType="number"
        android:maxLength="10"
        android:background="@drawable/et_bg_shape"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirmRegisterMobileNoVerify"
        android:background="@drawable/btn_bg_shape"
        android:layout_marginTop="20dp"
        android:text="Verify"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="23dp"/>

</LinearLayout>