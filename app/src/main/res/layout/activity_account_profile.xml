<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account_Profile_Activity"
    android:background="#D5C7C7"
    android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/ivMyProfileProfilePhoto"
            android:src="@drawable/profileimage"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMyProfileEditeProfile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_shape"
            android:text="Edit Profile "
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:id="@+id/tvMyProfileName"
            android:hint="Name :-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:inputType="text"
            android:background="@drawable/background_btn_white"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginTop="40sp"/>

        <TextView
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:id="@+id/tvMyProfileMobileNo"
            android:hint="Mobile No :-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:inputType="text"
            android:background="@drawable/background_btn_white"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:id="@+id/tvMyProfileEmailId"
            android:hint="Email Id :-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:inputType="text"
            android:background="@drawable/background_btn_white"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:id="@+id/tvMyProfileUsername"
            android:hint="Username :-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:inputType="text"
            android:background="@drawable/background_btn_white"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMyProfileSingOut"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_bg_shape"
            android:text="Sing Out"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"/>

</LinearLayout>



